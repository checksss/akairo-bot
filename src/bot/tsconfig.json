{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2018",
        "strict": true,
        "moduleResolution": "node",
        "declaration": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "pretty": true,
        "outDir": "./dist",
        "module": "commonjs"
    },
    "include": [
        "bot.ts",
        "client/**/*",
        "commands/**/*",
        "inhibitors/**/*",
        "listeners/**/*",
        "structures/**/*"
    ],
    "exclude": [
        "node_modules/"
    ]
}